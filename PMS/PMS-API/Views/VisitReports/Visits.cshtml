@model IEnumerable<PMS_API.Models.VisitReport>

@{
    ViewBag.Title = "Visits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="index.html">Home</a>
            <i class="icon-angle-right"></i>
        </li>
        <li>
            <i class="icon-edit"></i>
            <a href="#">All Enquiry</a>
        </li>
    </ul>

    <!--/row-->
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header" data-original-title="">
                <h2><i class="halflings-icon edit"></i><span class="break"></span>All Enquiry</h2>
                <div class="box-icon">
                    <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                    <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                    <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
                </div>
            </div>
            @*@using (Html.BeginForm())
                {     @Html.AntiForgeryToken()*@
            <div class="box-content">

                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>Visited By</th>
                            <th>Visited On</th>
                            <th>Health</th>
                            <th>Status</th>
                            <th>Comments</th>
                            <th>Notes</th>
                            <th>Action Plan</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.VisitedBy)</td>
                                <td>@Html.DisplayFor(modelItem => item.VisitedOn)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProjectHealth.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProjectStatu.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.comments)</td>
                                <td>@Html.DisplayFor(modelItem => item.notes)</td>
                                <td>@Html.DisplayFor(modelItem => item.ActionPlanReportUrl)</td>

                                <td class="center">
                                    <a class="btn btn-info" href="/Visits/Edit/@item.Id">
                                        <i class="halflings-icon white edit"></i>
                                    </a>
                                    <a class="btn btn-danger" href="#">
                                        <i class="halflings-icon white trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div><!--/span-->

    </div><!--/row-->

</div>


